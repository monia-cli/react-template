{
  "name": "react-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "cross-env REACT_APP_CONFIG_ENV=dev react-app-rewired start",
    "build": "cross-env REACT_APP_CONFIG_ENV=prod react-app-rewired build",
    "dev": "cross-env REACT_APP_CONFIG_ENV=dev react-app-rewired build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "lint:ts": "tsc --noEmit &&  eslint src --ext .ts,.tsx ",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "commit": "git-cz"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "axios": "^0.21.1",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.8.0",
    "customize-cra-react-refresh": "^1.1.0",
    "dva-core": "^2.0.4",
    "eslint-config-react-app": "^6.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@types/react-redux": "^7.1.15",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "commitizen": "^4.2.2",
    "commitlint-config-cz": "^0.13.2",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "node-sass": "^5.0.0",
    "pont-engine": "1.0.10",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.8",
    "react-hot-loader": "^4.13.0",
    "sass": "^1.32.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint",
      "npm run format"
    ]
  }
}
